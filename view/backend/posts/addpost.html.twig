{% extends "backend/basebackend.html.twig" %}
{% block title %} Admin posts add {% endblock %}
{% block bodyadmin %}
            <!-- ADD POST FORM -->
            <section>     
                <div class="content">
                    <div class="content-header">
                        <h4 class="title title-post">Create Posts</h4>
                    </div>
                    <div class="create">
                        <div class="container">
                            {% if session.danger is not empty %}
                                <div class="alert alert-danger alert-dismissible show pt-5" role="alert">
                                    <p>You have not completed the form correctly :</p>
                                        <ul>
                                            {% for danger in session.danger %}
                                                <li> {{ danger }}</li>  
                                            {% endfor %}   
                                        </ul>
                                     <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>     
                                </div>    
                            {% endif %}
                            <form method="post" action="" enctype="multipart/form-data">
                                <fieldset class="form-group form-post row g-0">
                                    <div class="form-field col-lg-12">
                                        <label for="author">Author</label>
                                        <input type="text" name="username" id="username" class="form-control" disabled value="{{ session.username }}">
                                    </div>  
                                    <div class="form-field col-lg-12">
                                        <label for="title">Title</label>
                                        <input type="text" name="title" id="title" class="form-control" value="{{ session.input.title is defined ? session.input.title : "" }}">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="headline">Headline</label>
                                        <input type="text" name="headline" id="headline" class="form-control" value="{{ session.input.headline is defined ? session.input.headline : "" }}">
                                    </div>
                                    <div class="form-field col-lg-12">
                                    <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                                    <textarea name="content" id="content" class="form-control">{{ session.input.content is defined ? session.input.content : "" }}</textarea>      
                                    </div>
                                    
                                    <div class="form-field col-lg-12 file-input">
                                        <label for="formFile" class="form-label">Image</label>
                                        <input type="file" name="image" id="image" class="form-control" value="{{ session.input.image is defined ? session.input.image : "" }}">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="tags">Tag category</label>
                                        <select name="tag" id="tag" class="form-control">
                                            <option value="0">Select option</option>
                                            {% if selectags %}
                                                {% for tag in selectags %}
                                                    <option {{ session.input.tag_id is defined and session.input.tag_id == tag.id ? selected : "" }} value="{{ tag.id }}">{{ tag.name }}</option>
                                                {% endfor %}  
                                            {% endif %}  
                                        </select>
                                    </div>
                                    {% if session.auth_role and session.auth_role == 2 %}
                                    <div class="form-check">
                                        <input type="checkbox" name="status_post" class="form-check-input" value="2" {% if editpost.status_post is defined and editpost.status_post == 2 %} checked {% endif %} id="checkbox">
                                        <label class="form-check-label" for="checkbox">Published</label>
                                    </div>
                                    {% endif %}
                                    <div class="btn-post d-flex justify-content-between">
                                        <button type="submit" name="submit" class="submit-post submit-btn">Add post</button>
                                        <a class="submit-btn submit-post" href="index.php?page=indexpost" role="button"><i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Back</a>    
                                    </div>
                                </fieldset>
                            </form>
                        </div>                 
                    </div>
                </div>
            </section>
        </div>
{% endblock %}     