{% extends "backend/basebackend.html.twig" %}
{% block title %} Admin posts edit {% endblock %}
{% block bodyadmin %}
            <!-- EDIT POST FORM -->
            <section>
                <div class="content">
                    <div class="content-header">
                            <h4 class="title title-post">Edit Posts</h4>
                    </div>
                    <div class="edit">
                        <div class="container">
                            <form method="post" action=".php">
                                <fieldset class="form-group form-post row g-0">
                                    <div class="form-field col-lg-12">
                                        <label for="tags">Tag category</label>
                                        <input list="tag" name="tags" id="tags" required class="form-control">
                                        <datalist id="tag">
                                            <option value="Database">
                                            <option value="Git/Github">
                                            <option value="HTML5/CSS3">
                                            <option value="Framework">
                                            <option value="PHP/Symfony">
                                            <option value="Javascript">
                                            <option value="Security">
                                        </datalist>
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="title">Title</label>
                                        <input type="text" name="title" id="title" required class="form-control">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="headline">Catchy headline</label>
                                        <input type="text" name="headline" id="headline" required class="form-control">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label>Post content</label>
                                        <div id="toolbar">
                                        </div>
                                        <div id="editor">
                                            <p>Hello World!</p>
                                        </div>
                                    </div>
                                    <div class="form-field col-lg-12 file-input">
                                        <label for="formFile" class="form-label">Image</label>
                                        <input type="file" id="formFile" class="form-control">
                                    </div>
                                    <div class="btn-post d-flex justify-content-between">
                                        <button type="submit" class="submit-post submit-btn">Update Post</button>
                                        <a class="btn" href="index.html" role="button"><i class="fas fa-arrow-left"></i> back</a>
                                    </div>
                                </fieldset>
                            </form>
                        </div>                 
                    </div>
                </div>
            </section>
{% endblock %}