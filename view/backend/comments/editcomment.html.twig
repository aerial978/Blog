{% extends "backend/basebackend.html.twig" %}
{% block title %} Admin comments edit {% endblock %}
{% block bodyadmin %}
            <!-- EDIT COMMENT FORM -->
            <section>
                <div class="content">
                    <div class="content-header">
                            <h4 class="title title-comment">Edit Comments</h4>
                    </div>
                    <div class="edit">
                        <div class="container">
                            <form method="post" action=".php">
                                <fieldset class="form-group form-comment row g-0">
                                    <div class="form-field col-lg-12">
                                        <label for="auth-com">Author</label>
                                        <input type="text" name="auth-com" id="auth-com" disabled class="form-control">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="comment-date">Date</label>
                                        <input type="text" name="date" id="date" disabled class="form-control">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="title-post">Title post</label>
                                        <input type="text" name="headline" id="title-post" disabled class="form-control">
                                    </div>
                                    <div class="form-field col-lg-12">
                                        <label for="exampleFormControlTextarea1" class="form-label">Comment Content</label>
                                        <textarea class="form-control" disabled id="exampleFormControlTextarea1" rows="5"></textarea>
                                    </div>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="checkbox">
                                        <label class="form-check-label" for="checkbox">Published</label>
                                    </div>
                                    <a class="btn" href="?page=indexcomment" role="button"><i class="fas fa-arrow-left"></i> back</a>
                                </fieldset>
                            </form>
                        </div>                 
                    </div>
                </div>
            </section>
        </div>
{% endblock %}